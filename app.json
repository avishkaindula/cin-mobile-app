{
  "expo": {
    "name": "Mission 1.5",
    "slug": "mission-1-5",
    "version": "1.0.10",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.mission15",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mission15",
      "usesAppleSignIn": true,
      "appleTeamId": "3674CYRVR2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mission15",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 36,
            "targetSdkVersion": 36,
            "buildToolsVersion": "36.0.0"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Mission 1.5 to access your microphone to record audio evidence for climate missions."
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-localization",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Mission 1.5 to access your camera to capture evidence for climate missions.",
          "microphonePermission": "Allow Mission 1.5 to access your microphone to record audio evidence for climate missions.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Mission 1.5 to access your photos to submit evidence for climate missions."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Mission 1.5 to access your location to verify mission completion locations.",
          "locationAlwaysPermission": "Allow Mission 1.5 to access your location to verify mission completion locations.",
          "locationWhenInUsePermission": "Allow Mission 1.5 to access your location to verify mission completion locations."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bd6cf34d-8f39-449b-80de-5b9a56ce6ee0"
      }
    }
  }
}
